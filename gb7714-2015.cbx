\renewrobustcmd{\mkbibsuperscript}[1]{%
  \unspace\allowhyphens\textsuperscript{%
    \begingroup
    \protected\long\def\mkbibsuperscript##1{%
      \blx@warning{Nested superscript}%
      \mkbibbrackets{##1}}%嵌套的这里没有动
    #1\endgroup}\kern\z@}%

\def\gbcitelabelopt@bracket{%
